{
  "manifest_version": 2,
  "name": "Shortcut Panel Extension",
  "version": "1.1",
  "description": "Custom Shortcut Panel with in-page editor.",

  "icons": {
    "48": "icons/icon.png"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "shortcut-panel@local-dev"
    }
  }
}
